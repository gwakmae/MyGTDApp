@rendermode InteractiveServer
@inject ISidebarJsService SidebarJs  

<button class="sidebar-toggle-btn" @onclick="HandleClick">
    <span class="bi bi-list"></span>
</button>

@code {
    [Parameter] public EventCallback<bool> OnToggle { get; set; }

    private async Task HandleClick()
    {
        bool isOpen = await SidebarJs.ToggleAsync();   // JS 실행 & 결과
        await OnToggle.InvokeAsync(isOpen);            // 부모(MainLayout)에 전달
    }
}
